<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.konka.advert.MainActivity" >

    <Button 
        android:id="@+id/bton_adinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="@string/adinfo" />

    <TextView
        android:id="@+id/txview_adsummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bton_adinfo"
        android:text="@string/adsummary" />
    
    <TextView
        android:id="@+id/label_adversion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txview_adsummary"
        android:text="@string/adversion" />
    
    <TextView
        android:id="@+id/txview_adversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_adversion"
        android:layout_below="@id/txview_adsummary"
        android:text="@string/adversion" />

    <TextView
        android:id="@+id/label_adservurl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_adversion"
        android:text="@string/adservurl" />
    
	<TextView
        android:id="@+id/txview_adservurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_toRightOf="@id/label_adservurl"
        android:layout_below="@id/txview_adversion"
        android:text="@string/adservurl" />
	
</RelativeLayout>
